{
    "rust-analyzer": {
        "cargo": {
            "features": "all"
        },
        "checkOnSave": {
            "command": "check",
            "allTargets": true
        },
        "completion": {
            "postfix": {
                "enable": false
            }
        },
        "hover": {
            "actions": {
                "run": {
                    "enable": true
                }
            }
        }
    }
}
